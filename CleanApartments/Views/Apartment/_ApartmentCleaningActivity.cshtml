@using CleanApartments.Common.Dtos;

@model ApartmentCleaningDto

    <form asp-action="CreateCleaningActivity">
        <div class="form-group">
            <label for="apartmentId">Apartment number</label>
            <input type="number" readonly class="form-control" id="apartmentId" asp-for="ApartmentId">
        </div>
        <div class="form-group">
            <label for="apartmentName">Apartment name</label>
            <input type="text" readonly  class="form-control" id="apartmentName" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="notes">Cleaning Notes</label>
            <input type="text" class="form-control" id="notes" asp-for="Notes" placeholder="Cleaning Notes">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="HasIssuesToReport" id="issues">
            <label class="form-check-label" for="issues">Issues to report</label>
        </div>
        <button type="submit" value="Cleaning Complete" class="btn btn-primary">Complete Cleaning</button>
    </form>
